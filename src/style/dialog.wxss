.dialog {
    position: fixed;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 999;
}
.dialog .dialog-success {
    background: #ffce1d;
    color: #fff;
}

.dialog .dialog-footer {
    display: flex;
}
.dialog-background {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: #ccc;
    opacity: 0.7;
}
.dialog-content {
    width: 86%;
    margin: 0% 7%;
    position: absolute;
    top: 30%;
    border-radius: 10px;
    background: #fff;
}

.dialog-title{
    line-height: 60px;
    font-weight: bold;
    text-align: center;
    position: relative;
    background: #ffce1d;
    border-radius: 10px 10px 0 0;
    color: #fff;
}
.dialog-title .close-dialog {
    position: absolute;
    right: 10px;
    top: -10px;
}
.dialog-body {
    line-height:40px;
    font-size:15px;
    padding:10px;
    width: 94%;
}
.dialog .weui-cells__title {
    color: #fff;
}